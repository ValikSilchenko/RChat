<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PreviewChat_View"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true">

    <ImageView
        android:id="@+id/PC_AvatarImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/image_color" />

    <TextView
        android:id="@+id/PC_LoginTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Sender Name"
        android:textColor="?attr/chat_txt_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/PC_AvatarImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PC_ReceivingTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="10:21"
        android:textColor="?attr/pc_msg_color"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PC_ShownMessageInfoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:text="@string/you_title"
        android:textColor="?attr/chat_txt_color"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/PC_AvatarImg"
        app:layout_constraintTop_toBottomOf="@id/PC_LoginTV" />

    <TextView
        android:id="@+id/PC_MessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:maxLength="45"
        android:maxLines="1"
        android:text="This is the message that gonna be displayed in chatswindow"
        android:textColor="?attr/pc_msg_color"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/PC_ShownMessageInfoTV"
        app:layout_constraintTop_toBottomOf="@id/PC_LoginTV" />
</androidx.constraintlayout.widget.ConstraintLayout>