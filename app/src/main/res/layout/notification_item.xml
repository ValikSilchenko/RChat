<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/N_AvatarImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/image_color"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/N_SenderLoginTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/N_AvatarImg"
        android:text="Sender Login"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/chat_txt_color"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/N_MessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/N_AvatarImg"
        app:layout_constraintTop_toBottomOf="@id/N_SenderLoginTV"
        android:text="Message from any chat"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:textColor="?attr/chat_txt_color"
        android:singleLine="true" />

    <TextView
        android:id="@+id/N_TimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="10:21"
        android:textColor="?attr/pc_msg_color"
        android:textSize="13sp" />

</androidx.constraintlayout.widget.ConstraintLayout>