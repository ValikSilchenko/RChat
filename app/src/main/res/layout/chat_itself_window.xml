<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".windows.ChatItselfWindow">

    <LinearLayout
        android:id="@+id/CIW_TopContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/CIW_BackBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="?attr/main_color"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_back"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/CIW_ChatName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CIW_ChatName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="Recipient Login"
            android:textColor="?attr/chat_txt_color"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/CIW_BackBtn"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/GCW_ActionsBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="?attr/main_color"
        android:clickable="true"
        android:visibility="gone"
        android:focusable="true"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/CIW_MessagesArray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:transcriptMode="normal"
        app:layout_constraintBottom_toTopOf="@id/CIW_BottomContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CIW_TopContainer"
        tools:listitem="@layout/message_item" />

    <LinearLayout
        android:id="@+id/CIW_BottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layoutDirection="rtl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CIW_MessagesArray">

        <ImageButton
            android:id="@+id/CIW_SendMessageBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="?attr/main_color"
            android:clickable="true"
            android:focusable="true"
            android:rotation="180"
            android:src="@drawable/ic_send" />

        <EditText
            android:id="@+id/CIW_MessageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/edit_txt_color"
            android:hint="@string/Message_Input_Hint"
            android:inputType="textMultiLine"
            android:layoutDirection="ltr"
            android:maxHeight="150dp"
            android:textColor="?attr/chat_txt_color"
            android:textColorHint="?attr/edit_txt_color" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>