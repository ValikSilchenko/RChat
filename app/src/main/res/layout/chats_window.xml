<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".windows.ChatsWindow">

    <!-- Верхний контейнер -->
    <LinearLayout
        android:id="@+id/CW_TopContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/CW_ChatsRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Кнопка дополнительных действий -->
        <ImageButton
            android:id="@+id/CW_MoreBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="?attr/main_color"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_more" />

        <!-- Логин авторизованного пользователя -->
        <TextView
            android:id="@+id/CW_AppNameTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:text="R Chat"
            android:textColor="?attr/chat_txt_color"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- Верхняя разграничительная линия -->
    <View
        android:id="@+id/CW_TopLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="?attr/edit_txt_color"
        app:layout_constraintBottom_toTopOf="@id/CW_ChatsRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CW_TopContainer" />

    <TextView
        android:id="@+id/CW_NoChatsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theres_nothing_here_title"
        android:textColor="?attr/chat_txt_color"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Список чатов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CW_ChatsRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:focusable="true"
        android:longClickable="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CW_TopContainer"
        tools:listitem="@layout/preview_chat_item" />
</androidx.constraintlayout.widget.ConstraintLayout>