<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".ChatsWindow">

    <LinearLayout
        android:id="@+id/CW_TopContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/CW_ChatsArray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/CW_MoreBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundcorner"
            android:backgroundTint="?attr/button_color"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_more" />

        <TextView
            android:id="@+id/CW_AppName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:text="R Chat"
            android:textColor="?attr/text_color"
            android:textSize="30sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/CW_ChatsArray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:focusable="true"
        android:longClickable="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CW_TopContainer"
        tools:listitem="@layout/preview_chat" />
</androidx.constraintlayout.widget.ConstraintLayout>