<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".windows.FindUsersWindow">

    <!-- Кнопка выхода назад -->
    <ImageButton
        android:id="@+id/FUW_BackBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="?attr/main_color"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_back"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/FUW_FindUserLoginET"/>

    <EditText
        android:id="@+id/FUW_FindUserLoginET"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="?attr/edit_txt_color"
        android:hint="@string/user_login_title"
        android:textColor="?attr/chat_txt_color"
        android:textColorHint="?attr/edit_txt_color"
        app:layout_constraintEnd_toStartOf="@id/FUW_FindUserBtn"
        app:layout_constraintStart_toEndOf="@id/FUW_BackBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/FUW_FoundUsersRV"/>

    <ImageButton
        android:id="@+id/FUW_FindUserBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="?attr/main_color"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/FUW_FindUserLoginET"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp" />

    <!-- Список найденных пользователей -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FUW_FoundUsersRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FUW_FindUserLoginET"
        tools:listitem="@layout/preview_chat_item" />
</androidx.constraintlayout.widget.ConstraintLayout>